        <script>
          function toggleMonitor(checkbox, patientId) {
            fetch(`/patients/${patientId}/toggle_monitor`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ on_monitor: checkbox.checked })
            })
            .then(response => response.json())
            .then(data => {
