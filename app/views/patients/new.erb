<div class="row">
  <div class="col-6">
    <div class="form-container">
      <h2>Добавление нового пациента</h2>
      
      <form action="/patients" method="post">
        <div class="form-group">
          <label for="full_name">ФИО пациента</label>
          <input type="text" id="full_name" name="full_name" class="form-control" required>
        </div>
        
        <div class="form-group">
          <label for="date_of_birth">Дата рождения</label>
          <input type="date" id="date_of_birth" name="date_of_birth" class="form-control" required>
        </div>
        
        <div class="form-group">
          <label for="admission_time">Дата и время поступления</label>
          <input type="datetime-local" id="admission_time" name="admission_time" class="form-control" required>
        </div>
        
        <button type="submit" class="btn">Добавить пациента</button>
        <a href="/patients" class="btn btn-secondary">Отмена</a>
      </form>
    </div>
  </div>
</div>